<Window x:Class="Projekt2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt2_WPF"
        mc:Ignorable="d"
        Title="SecondMainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="CreateDbButton" Content="Stwórz bazę" HorizontalAlignment="Left" Height="65" Margin="194,83,0,0" VerticalAlignment="Top" Width="418" Click="CreateDB"/>
        <Button x:Name="DeleteDbButton" Content="Wyczyść bazę danych" HorizontalAlignment="Left" Margin="194,233,0,0" VerticalAlignment="Top" Width="418" Height="65" Click="DeleteDB"/>
        <Button x:Name="GoToDbButton" Content="Przejdź do bazy" HorizontalAlignment="Left" Height="65" Margin="194,158,0,0" VerticalAlignment="Top" Width="418" Click="GoToDB"/>
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Left" Height="28" Margin="194,359,0,0" VerticalAlignment="Top" Width="418" IsIndeterminate="True" Visibility="Hidden"/>
        <Label x:Name="ProgressInfoLabel" Content="Trwa tworzenie bazy danych, proszę czekać..." HorizontalAlignment="Left" Margin="194,333,0,0" VerticalAlignment="Top" Width="418" HorizontalContentAlignment="Center" Visibility="Hidden"/>
    </Grid>
</Window>